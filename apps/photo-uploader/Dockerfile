# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build photo-uploader`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t photo-uploader`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system photo-uploader && \
          adduser --system -G photo-uploader photo-uploader

COPY dist/apps/photo-uploader photo-uploader/
RUN chown -R photo-uploader:photo-uploader .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix photo-uploader --omit=dev -f install

CMD [ "node", "photo-uploader" ]
